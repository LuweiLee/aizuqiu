.container {
  padding: 20rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 比赛信息样式 */
.teams {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.team {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.team-logo {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.team-name {
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.vs {
  font-size: 32rpx;
  color: #999;
  margin: 0 20rpx;
}

.match-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}

/* 分析和预测部分样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.analysis-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.prediction-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 0 10rpx;
}

.stat-item .label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-item .value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
}
