.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 日期选择器样式 */
.date-picker {
  background-color: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.date-scroll {
  white-space: nowrap;
}

.date-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.date-item.active {
  background-color: #007AFF;
  color: #fff;
}

.day {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.date {
  font-size: 28rpx;
  font-weight: bold;
}

/* 比赛卡片样式 */
.matches-container {
  padding: 0 10rpx;
}

.match-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.league-name {
  font-size: 26rpx;
  color: #666;
}

.match-time {
  font-size: 26rpx;
  color: #666;
}

.match-teams {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.team {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.team-logo {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.team-name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.match-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}

.vs {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.score {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.score-divider {
  margin: 0 10rpx;
  color: #666;
}

.status-text {
  font-size: 24rpx;
  color: #FF3B30;
  margin-top: 6rpx;
}

.match-footer {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.predict-btn {
  background-color: #007AFF;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
  border: none;
}

.predict-btn::after {
  border: none;
}

.no-matches {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
}
